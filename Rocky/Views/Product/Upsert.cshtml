@model Rocky.Models.ViewModels.ProductViewModel;

@{
    var title = "Create Product";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    @if(Model.Product.Id != 0)
    {
        title = "Edit Product";
        <input asp-for="Product.Id" type="hidden" />
    }

    <div class="border p-3">
        <div class="form-group">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Price" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.ShortDescription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.ShortDescription" class="form-control" />
                        <span asp-validation-for="Product.ShortDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Product.Description" class="form-control summernote"></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label for="uploadBox">Image</label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" multiple asp-for="Product.Image" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.CategoryId"></label>
                    </div>
                    <div class="col-8">
                       <select asp-for="Product.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                           <option selected disabled>--Select Category--</option>
                       </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                       <select asp-for="Product.ApplicationTypeId" asp-items="@Model.ApplicationTypeSelectList" class="form-control">
                           <option selected disabled>--Select Application Type--</option>
                       </select>
                        <span asp-validation-for="Product.ApplicationTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col-6">
                            @if(Model.Product.Id != 0)
                            {
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                            else
                            {
                                <input type="submit" onclick="validateInput()" class="btn btn-primary w-100" value="Create" />
                            }
                        </div>
                        <div class="col-6">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if(Model.Product.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Product.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" alt="@Model.Product.Name" />
                }
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{ <partial name="_ValidationScriptsPartial" /> }

    <script>
        $(document).ready(function() {
          $('.summernote').summernote({
              height: 250
          });
        });

        function validateInput(){
            if(document.getElementById("uploadBox").value == ""){
                Swal.fire(
                  'Error!',
                  'Please upload an Image1!',
                  'error'
                )
                return false;
            }
            return true;
        }
    </script>

}